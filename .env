# Environment variables for the Book Recommendation API
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
DEBUG=false
API_HOST=0.0.0.0
API_PORT=5000

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///books.db

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Scraping Configuration
ITEMS_PER_PAGE=25
LOW_MEMORY_TARGET_MB=128

# License/Activation (if needed)
PARTIAL_LICENSE_ENABLED=true
PARTIAL_LICENSE_SCOPE=scraping-only
ACTIVATION_KEY=BOOKS-API-DEV-KEY